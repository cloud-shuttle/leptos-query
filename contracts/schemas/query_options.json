{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://api.leptos-query.rs/schemas/query_options.json",
  "title": "QueryOptions",
  "description": "Configuration options for a query operation",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether the query should run"
    },
    "stale_time": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Time in milliseconds before data becomes stale"
    },
    "cache_time": {
      "type": "integer",
      "minimum": 0,
      "default": 300000,
      "description": "Time in milliseconds before data is removed from cache"
    },
    "refetch_interval": {
      "type": ["integer", "null"],
      "minimum": 0,
      "default": null,
      "description": "Interval in milliseconds for background refetching"
    },
    "retry": {
      "type": "object",
      "properties": {
        "max_retries": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "default": 3,
          "description": "Maximum number of retry attempts"
        },
        "base_delay": {
          "type": "integer",
          "minimum": 0,
          "maximum": 60000,
          "default": 1000,
          "description": "Base delay in milliseconds between retries"
        },
        "max_delay": {
          "type": "integer",
          "minimum": 0,
          "maximum": 300000,
          "default": 10000,
          "description": "Maximum delay in milliseconds between retries"
        }
      },
      "additionalProperties": false,
      "required": ["max_retries", "base_delay", "max_delay"],
      "description": "Retry configuration for failed queries"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "enabled": true,
      "stale_time": 0,
      "cache_time": 300000,
      "refetch_interval": null,
      "retry": {
        "max_retries": 3,
        "base_delay": 1000,
        "max_delay": 10000
      }
    },
    {
      "enabled": false,
      "stale_time": 60000,
      "cache_time": 600000,
      "refetch_interval": 30000,
      "retry": {
        "max_retries": 5,
        "base_delay": 2000,
        "max_delay": 30000
      }
    }
  ]
}
